# Manual Implementation Configuration
# 
# Copy this file and customize for your environment
# Then: source deployment-config.env

# ============================================================================
# AWS Configuration
# ============================================================================
export AWS_REGION="ap-south-1"
export AWS_PROFILE="sarowar-ostad"

# Network Resources (must be created beforehand)
export VPC_ID="vpc-xxxxxxxxx"
export SUBNET_IDS="subnet-xxx,subnet-yyy"  # Public subnets for ALB (comma-separated)
export SECURITY_GROUP_ID="sg-xxxxxxxxx"    # Security group allowing 80/443

# ============================================================================
# Domain Configuration
# ============================================================================
export DOMAIN="bmi.ostaddevops.click"
export HOSTED_ZONE_NAME="ostaddevops.click"
export EMAIL="admin@ostaddevops.click"

# ============================================================================
# Database Configuration
# ============================================================================
export DB_NAME="bmidb"
export DB_USER="bmi_user"
export DB_PASSWORD="ChangeMe123!"  # CHANGE THIS!
export DB_PORT="5432"

# ============================================================================
# Backend Configuration
# ============================================================================
export BACKEND_PORT="3000"
export FRONTEND_URL="https://${DOMAIN}"

# ============================================================================
# Git Repository
# ============================================================================
export GIT_REPO="https://github.com/your-username/bmi-health-tracker.git"
export GIT_BRANCH="main"

# ============================================================================
# EC2 Instance Details
# Fill these after launching instances
# ============================================================================
export DATABASE_IP=""              # Private IP of database server
export BACKEND_IP=""               # Private IP of backend server
export FRONTEND_IP=""              # Private IP of frontend server

export DATABASE_INSTANCE_ID=""     # i-xxxxxxxxx
export BACKEND_INSTANCE_ID=""      # i-xxxxxxxxx
export FRONTEND_INSTANCE_ID=""     # i-xxxxxxxxx

# ============================================================================
# AMI Configuration
# ============================================================================
export AMI_ID="ami-0f58b397bc5c1f2e8"  # Ubuntu 22.04 LTS in ap-south-1
export INSTANCE_TYPE="t3.micro"
export KEY_NAME="your-key-pair"    # Your SSH key pair name

# ============================================================================
# Project Settings
# ============================================================================
export PROJECT_NAME="bmi-health-tracker"
export ENVIRONMENT="production"

# ============================================================================
# Validation
# ============================================================================
echo "Configuration loaded:"
echo "  Region: $AWS_REGION"
echo "  Domain: $DOMAIN"
echo "  Database IP: ${DATABASE_IP:-Not set}"
echo "  Backend IP: ${BACKEND_IP:-Not set}"
echo "  Frontend IP: ${FRONTEND_IP:-Not set}"
